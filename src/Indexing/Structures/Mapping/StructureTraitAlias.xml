<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd"
>

    <entity name="PhpIntegrator\Indexing\Structures\StructureTraitAlias">
        <id name="id" type="string"></id>

        <field name="name"               type="string"  nullable="false" length="255" />
        <field name="alias"               type="string"  nullable="true"  length="255" />

        <many-to-one field="structure" target-entity="PhpIntegrator\Indexing\Structures\Structure" inversed-by="traitAliases">
            <join-column on-delete="CASCADE" on-update="CASCADE" nullable="false" />
        </many-to-one>

        <many-to-one field="trait" target-entity="PhpIntegrator\Indexing\Structures\Structure">
            <join-column on-delete="CASCADE" on-update="CASCADE" nullable="true" />
        </many-to-one>

        <many-to-one field="accessModifier" target-entity="PhpIntegrator\Indexing\Structures\AccessModifier">
            <join-column on-delete="RESTRICT" on-update="RESTRICT" nullable="true" />
        </many-to-one>
    </entity>

</doctrine-mapping>
